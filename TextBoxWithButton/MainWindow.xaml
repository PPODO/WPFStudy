<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextBoxWithButton"
        xmlns:ViewModel="clr-namespace:TextBoxWithButton.ViewModel"
        x:Class="TextBoxWithButton.MainWindow"
        mc:Ignorable="d"
        Title="TextBoxWithButton" Height="450" Width="800">
    <Grid>
        <Grid.DataContext>
            <ViewModel:MainViewModel/>
        </Grid.DataContext>

        <TextBlock 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            FontSize="25"><Run Text="값을 입력하면 제곱된 값이 출력됩니다."/></TextBlock>

        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Margin="0,100,0,0">입력 값</TextBlock>
        <TextBox
            Width="150"
            Height="20"
            Margin="0,150,0,0"
            Text="{Binding Model.InputValue, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}">
        </TextBox>
        
        <Button 
            Content="제곱"
            Width="150"
            Height="20"
            Margin="0,225,0,0"
            Command="{Binding ButtonCommand}">
        </Button>

        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Margin="0,350,0,0"
            Text="결과"></TextBlock>
        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Margin="0,375,0,0"
            Text="{Binding Model.OutputValue}"></TextBlock>
    </Grid>
</Window>
