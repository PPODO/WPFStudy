<Window x:Class="Chat.Content.NewSessionWindow.NewSessionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat.Content.NewSessionWindow"
        mc:Ignorable="d"
        Title="NewSessionWindow" Height="200" Width="400"
        ResizeMode="NoResize">
    <Grid>
        <TextBlock Text="CREATE NEW SESSION"
                   FontSize="15"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,10,0,0"/>

        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Stretch" 
                    VerticalAlignment="Center"
                    Width="300"
                    Margin="0,0,0,50">

            <TextBlock Text="SESSION NAME : "
                       FontSize="10"/>
            
            <TextBox Width="200"
                     FontSize="10"
                     MaxLength="20"/>
            
        </StackPanel>

        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Stretch" 
                    VerticalAlignment="Center"
                    Width="300"
                    Margin="0,50,0,0">

            <TextBlock Text="MAX USER COUNT : "
                       FontSize="10"
                       VerticalAlignment="Center"/>

            <Button Width="20"
                    Height="20"
                    Content="O"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    FontSize="10"
                    Margin="10,0,0,0"/>

            <TextBlock Text="MAX USER COUNT"
                       FontSize="10"
                       VerticalAlignment="Center"
                       Margin="10,0,10,0"/>

            <Button Width="20"
                    Height="20"
                    Content="O"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    FontSize="10"/>

        </StackPanel>
        
        <Button Width="100"
                Height="25"
                Content="Create"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0,0,125,10"/>

        <Button Width="100"
                Height="25"
                Content="Cancel"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="125,0,0,10"/>
    </Grid>
</Window>
